{
  "name": "zabbix-dashboard",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "type-check": "vue-tsc --noEmit",
    "build": "vite build && tsc -p background.tsconfig.json --types @types/chrome && node scripts/prepare-extension.js",
    "build:extension": "yarn build && yarn copy:assets && yarn zip:extension",
    "copy:assets": "cp -r src/assets/* dist/assets/",
    "zip:extension": "cd dist && zip -r ../zabbix-dashboard.zip .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.4.0",
    "echarts": "^5.4.3",
    "element-plus": "^2.3.9",
    "pinia": "^2.1.6",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.4.5",
    "@vitejs/plugin-vue": "^4.2.3",
    "sass": "^1.64.1",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.27"
  }
}
